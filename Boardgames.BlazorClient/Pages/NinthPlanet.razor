@page "/ninthplanet/{gameId:int}"
@using Boardgames.BlazorClient.Components.NinthPlanet

@if (ScreenVm == null || ScreenVm.Client == null)
{
    <h1>Loading ...</h1>
}
else
{
    var client = ScreenVm.Client;

    if (client.CurrentRound != null)
    {
        <GameRoundView RoundViewModel="client.CurrentRound" />
    }
    else if (client.GameLobby != null)
    {
        <GameLobbyView LobbyViewModel="client.GameLobby" />
    }
    else
    {
        <p>Something went wrong!</p>
    }
}