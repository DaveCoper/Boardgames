@using Client.ViewModels.NinthPlanet
@using BlazorClient.Extensions

@for (int i = 0; i < Player.NumberOfCards; ++i)
{
   <BackOfTheCard XPostion="i*24" />
}

@if (Player.CommunicatedCard.HasValue)
{
    <FrontOfTheCard Card="Player.CommunicatedCard.Value" CanBeDraged="false" XPostion="(Player.NumberOfCards+5)*24" />
}

@code {

    private RemotePlayerViewModel player;

    [Parameter]
    public RemotePlayerViewModel Player
    {
        get => player;
        set
        {
            player = value;
            if (player != null)
            {
                player.UpdateOnPropertyChanged(this.StateHasChanged);
            }
        }
    }
}
