@using Boardgames.NinthPlanet.Client
@using BlazorClient.Extensions

@for (int i = 0; i < Player.NumberOfCards; ++i)
{
    <BackOfTheCard XPostion="i*24" />
}

@if (Player.DisplayedCard.HasValue)
{
    <FrontOfTheCard Card="Player.DisplayedCard.Value" CanBeDraged="false" XPostion="(Player.NumberOfCards+5)*24" />
}

@code {

    private PlayerState player;

    [Parameter]
    public PlayerState Player
    {
        get => player;
        set
        {
            player = value;
            if (player != null)
            {
                player.UpdateOnPropertyChanged(this.StateHasChanged);
            }
        }
    }
}