@using Boardgames.NinthPlanet.Client
@using BlazorClient.Extensions

<CardList ContentContainerStyle="npCard npCard-backSide"
          Cards="Enumerable.Range(0, Player.NumberOfCards).ToList()"
          CardSpace="10"
          CardHeight="140"
          CardWidth="80">
    <div />
</CardList>

@if (Player.DisplayedCard != null)
{
    <NpCard Card="@Player.DisplayedCard" />
}

@code {

    private PlayerState player;

    [Parameter]
    public PlayerState Player
    {
        get => player;
        set
        {
            player = value;
            if (player != null)
            {
                player.UpdateOnPropertyChanged(this.StateHasChanged);
            }
        }
    }
}