          stroke="black"
          stroke-width="1"
          width="79"
          height="139"
          x="0.5"
          y="0.5"
          rx="6" />
</svg>

@code {
    [Parameter]
    public Card Card { get; set; }

    private string HtmlColor
    {
        get
        {
            switch (Card.Color)
            {
                case CardColor.Rocket:
                    return "black";

                case CardColor.Blue:
                    return "#4d9ebc";

                case CardColor.Green:
                    return "#87b13f";

                case CardColor.Pink:
                    return "#b85294";

                case CardColor.Yellow:
                    return "#caa134";

                default:
                    throw new ArgumentOutOfRangeException(nameof(Card.Color));
            }
        }
    }
}