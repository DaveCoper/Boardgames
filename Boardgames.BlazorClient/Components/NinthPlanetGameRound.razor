@using Boardgames.Client.ViewModels
@inject IJSRuntime jsRuntime

<canvas id="gameCanvas" Width="400" Height="400"  />
<img id="cardTextureAtlas" src="https://cf.geekdo-images.com/0ApmYv9LSjnexNpiMVS7lQ__imagepage/img/3fpfc6_GgdEeL0bsJ7OugjzBULM=/fit-in/900x600/filters:no_upscale():strip_icc()/pic5506507.jpg" hidden />
@code {

    private NinthPlanetRoundViewModel roundViewModel;

    [Parameter]
    public NinthPlanetRoundViewModel RoundViewModel
    {
        get => roundViewModel;
        set
        {
            roundViewModel = value;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await jsRuntime.InvokeVoidAsync("initNinthPlanet", "gameCanvas", "cardTextureAtlas");
    }
}